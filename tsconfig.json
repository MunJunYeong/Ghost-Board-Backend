{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@configs/*": ["src/configs/*"],
            "@dtos/*": ["src/dtos/*"],
            "@middlewares/*": ["src/middlewares/*"],
            "@models/*": ["src/models/*"],
            "@routes/*": ["src/routes/*"],
            "@controllers/*": ["src/controllers/*"],
            "@services/*": ["src/services/*"],
            "@utils/*": ["src/utils/*"]
        },
        "outDir": "./dist",
        "target": "es2016",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
}
